namespace SiliconStudio.Xenko.Rendering.Lights
{
    /// <summary>
    /// Defines a directional light
    /// </summary>
    shader LightDirectional
    {
        struct DirectionalLightData
        {
            float3 DirectionWS;
            [Color]
            float3 Color;
        };
    };
}