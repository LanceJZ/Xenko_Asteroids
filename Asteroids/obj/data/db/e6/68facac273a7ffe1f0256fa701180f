/// <summary>
/// Compute the color from a stream
/// </summary>
shader ComputeColorFromStream<Semantic TStream, MemberName TRgba> : ComputeColor
{
    stream float4 LocalColor : TStream;

    override float4 Compute() {
        return streams.LocalColor.TRgba;
    }
};
