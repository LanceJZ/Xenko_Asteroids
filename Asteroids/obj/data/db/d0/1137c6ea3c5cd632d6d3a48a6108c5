namespace SiliconStudio.Xenko.Rendering.Skyboxes
{
    /// <summary>
    /// Sample shader to sample a skybox.
    /// </summary>
    shader ComputeSkyboxCubeMapColor<LinkType TTexture> : IComputeEnvironmentColor, Texturing, DynamicTextureCube<TTexture, PerLighting>
    {
        override float4 Compute(float3 direction)
        {
            return CubeMap.Sample(LinearSampler, direction);
        }
    };
}
